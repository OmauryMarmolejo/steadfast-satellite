---
import Layout from "../layouts/Layout.astro";
const { post } = Astro.params

export async function getStaticPaths() {
    return [
        { params: { post: 'hello-world' } },
        { params: { post: 'another-post' } },
        { params: { post: 'yet-another-post' } }
    ]
}
---

<Layout title="Post">
    <script is:inline>
        alert('Hello from Astro')
    </script>

    <h1 style="color: white;">{post}</h1>
    <p>This is a post</p>
</Layout>